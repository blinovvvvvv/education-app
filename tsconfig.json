{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["app/*"],
			"@entities/*": ["entities/*"],
			"@features/*": ["features/*"],
			"@shared/*": ["shared/*"],
			"@pages/*": ["pages/*"],
			"@widgets/*": ["widgets/*"],
		}
	},
	"include": ["src", "test/testing.ts", "__tests__"],
	"exclude": ["node_modules"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
